<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/button_margin"
        tools:context="com.sherlockshi.rxjavapractise.MainActivity">

        <Button
            style="@style/ButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="jumpToCategory4Operator1StartWithActivity"
            android:text="@string/activity_category4_combining_observables_1_start_with" />

        <Button
            style="@style/ButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="jumpToCategory4Operator2MergeActivity"
            android:text="@string/activity_category4_combining_observables_2_merge" />

        <Button
            style="@style/ButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="jumpToCategory4Operator3ZipActivity"
            android:text="@string/activity_category4_combining_observables_3_zip" />

        <Button
            style="@style/ButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="jumpToCategory4Operator4AndThenWhenActivity"
            android:text="@string/activity_category4_combining_observables_4_and_then_when" />

        <Button
            style="@style/ButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="jumpToCategory4Operator5CombineLatestActivity"
            android:text="@string/activity_category4_combining_observables_5_combine_latest" />

        <Button
            style="@style/ButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="jumpToCategory4Operator6JoinActivity"
            android:text="@string/activity_category4_combining_observables_6_join" />

        <Button
            style="@style/ButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="jumpToCategory4Operator7SwitchActivity"
            android:text="@string/activity_category4_combining_observables_7_switch" />
    </LinearLayout>
</ScrollView>
