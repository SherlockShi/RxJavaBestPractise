<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/cardview_margin"
    android:background="@color/colorGrey"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/CardViewStyle"
        app:elevation="@dimen/cardview_elevation"
        card_view:cardBackgroundColor="@color/cardBackgroundColor"
        card_view:cardCornerRadius="@dimen/card_corner_radius" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/TitleBarStyle"
                android:text="@string/activity_description" />

            <TextView
                android:id="@+id/tv_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                tools:text="@string/activity_category1_creating_observables_1_create_description"
                android:textSize="12sp"
                android:textColor="@color/textColorSecondary"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/CardViewStyle"
        app:elevation="@dimen/cardview_elevation"
        card_view:cardBackgroundColor="@color/cardBackgroundColor"
        card_view:cardCornerRadius="@dimen/card_corner_radius" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/TitleBarStyle"
                android:text="@string/activity_graph" />

            <ImageView
                android:id="@+id/iv_graph"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:scaleType="fitCenter"
                tools:src="@drawable/a1_create"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cv_output"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/CardViewStyle"
        android:visibility="gone"
        app:elevation="@dimen/cardview_elevation"
        card_view:cardBackgroundColor="@color/cardBackgroundColor"
        card_view:cardCornerRadius="@dimen/card_corner_radius" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/TitleBarStyle"
                android:text="@string/activity_output" />

            <TextView
                android:id="@+id/tv_output"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:textSize="12sp"
                android:textColor="@color/textColorSecondary"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/CardViewStyle"
        app:elevation="@dimen/cardview_elevation"
        card_view:cardBackgroundColor="@color/cardBackgroundColor"
        card_view:cardCornerRadius="@dimen/card_corner_radius" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/TitleBarStyle"
                android:text="@string/activity_sample_code" />

            <TextView
                android:id="@+id/tv_sample_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:textSize="12sp"
                android:textColor="@color/textColorSecondary"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
